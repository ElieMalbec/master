from Combattants import *


class Arquebusiers(Combattants):

    """Classe Arquebusiers héritant de combattant"""

    def __init__(self, nom="Arquebusier", pv=5, pa=15, df=0, vit=1, cout=10):

        """Création d'un Arquebusier hérité de Combattant"""

        # Appel du constructeur de la classe mère

        Combattants.__init__(self, nom, pv, pa, df, vit, cout)

    def creerTroupeArquebusiers(self, nombre):
        laTroupeArquebusiers = []
        for i in range(0, nombre):
            laTroupeArquebusiers.append(Arquebusiers())
        return laTroupeArquebusiers

    def afficherTroupeArquebusiers(self, troupe):
        for i in range(len(troupe)):
            print(i + 1, " ", troupe[i])

    def calculPV(self, nombre, troupe):
        pvTotal = (troupe[0].pv) * nombre
        return pvTotal

    def calculPA(self, nombre, troupe):
        paTotal = (troupe[0].pa) * nombre
        return paTotal

    def calculDF(self, nombre, troupe):
        dfTotal = (troupe[0].df) * nombre
        return dfTotal

    def calculVIT(self, nombre, troupe):
        vitTotal = (troupe[0].vit) * nombre
        return vitTotal

    def calculCOUT(self, nombre, troupe):
        coutTotal = (troupe[0].cout) * nombre
        return coutTotal
